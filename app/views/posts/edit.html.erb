<div class="post-container">
  <%= link_to "< Back to posts", :back, class: "back" %>
</div>

<div class="new-post">
  <%= form_for @post do |form| %>
    <%= form.label :message, "Update your message", class: "post-form-label" %>
    <%= form.text_area :message, class: "post-form-textarea" %>
    <%= form.submit "Cast it again!", class: "post-form-submit" %>
  <% end %>
</div>
